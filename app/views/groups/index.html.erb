<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="display-4">Groups</h1>
  <br>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Created on</th>
        <th>Members</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= link_to group.name, group %></td>
          <td><%= group.created_at.strftime("%m/%d/%Y") %></td>
          <td>
            <% group.users.each do |member| %>
              <%= link_to member.username, user_path(member) %></br>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to "Create new group", new_group_path %>
</div>
