<p id="notice"><%= notice %></p>
<div>
  <div class="container">
    <h1 class="display-4"><%= @group.name %><span class="badge badge-dark"></span></h1>
    <thead>
      <tr>
        <th>Bill's name</th>
        <th>Amount</th>
        <th>Created on</th>
        <th>Paid by</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <br>
    <br>
    <%= link_to 'Back', groups_path, class: "btn btn-outline-secondary" %>

    <!-- get rid of this code! -->
    <% if current_user ==  @group.creator || current_user.admin? %>
      <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-outline-success"  %>
      <%= link_to 'Delete', @group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger"%>
    <% end %>
    <%= link_to 'New bill', new_group_bill_path(@group), class: "btn btn-outline-secondary" %>
  </div>
</div>
