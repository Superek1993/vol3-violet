<p id="notice"><%= notice %></p>

<div class="groups">
  <h2>Your groups</h2>
  <br>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Created on</th>
        <th>Members</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %></td>
          <td><%= group.created_at.strftime("%m/%d/%Y") %></td>
          <td><%= group.users %></td>
          <td><%= link_to 'Show', group %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to "Create new group", new_group_path %>
</div>
