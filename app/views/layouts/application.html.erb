<!DOCTYPE html>
<html>
  <head>
    <title>Split Guru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/navbar" %>
    <div class="container-fluid">

      <% if notice %>
        <p class="alert alert-success" id="notice-alert"><%= notice %></p>
        <% end %>
      <% if alert %>
        <p class="alert alert-danger" id="alert-alert"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
