<div class="card debt-details">
  <div class="card-header">
    Debts history
  </div>
  <div class="card-body">
    <ul class="not-decorated-list payers-list">
      <% @user.debts_as_borrower.each do |debt| %>
        <li>You owe <%= debt.bill.payer.username %> <%= number_to_currency(debt.amount) %></li>
      <% end%>
    </ul>
    <ul class="not-decorated-list borrowers-list">
      <% @user.debts_as_payer.each do |debt| %>
        <li><%= debt.borrower.username %> owes you <%= number_to_currency(debt.amount) %></li>
      <% end%>
    </ul>
  </div>
</div>
