<table class="table table-striped">
  <tbody>
    <%= will_paginate @all_users %>
    <% @all_users.each do |user| %>
      <% unless user.admin? %>
          <tr>
            <td><%= user.username %></td>
            <td><%= image_tag(user.avatar.url) unless user.avatar.file.nil? %></td>
            <td><%= image_tag(asset_path('default_avatar.png')) if user.avatar.file.nil? %></td>
            <% if current_user.admin? %>
                <% if user.blocked? %>
                  <td>Blocked</td>
                  <td><%= link_to 'Unban', user_path(id: user.id, user: { blocked:false }),controller: :users_controller,action: :update, method: :put, data: {confirm: "You sure?"}, role: 'button', class: 'btn btn-warning ml-2r' %></td>
                <% else %>
                  <td></td>
                  <td><%= link_to 'Ban', user_path(id: user.id, user: { blocked:true }),controller: :users_controller,action: :update, method: :put, data: {confirm: "You sure?"}, role: 'button', class: 'btn btn-warning ml-2r' %></td>
                <% end %>
                  <td><%= link_to 'Delete', user_path(id: user.id), method: :delete, data: {confirm: "You sure?"}, role: 'button', class: 'btn btn-danger ml-2r' %></td>
            <% end %>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>